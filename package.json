{
  "name": "auth-node",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "sonar": "node sonar-scanner.js",
    "test": "jest --coverage --runInBand --forceExit --bail .",
    "migrate-up": "knex --knexpath=src/repository/db-migrate.js --knexfile=src/repository/knexfile.js migrate:up",
    "migrate-down": "knex --knexpath=src/repository/db-migrate.js --knexfile=src/repository/knexfile.js migrate:down"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-validator": "^6.11.1",
    "helmet": "^4.6.0",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "log-timestamp": "^0.3.0",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-facebook-token": "^4.0.0",
    "passport-google-token": "^0.1.2",
    "passport-http-header-strategy": "^1.1.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "pug": "^3.0.1",
    "sqlite3": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.7",
    "sonarqube-scanner": "^2.8.0",
    "supertest": "^6.1.3"
  }
}
